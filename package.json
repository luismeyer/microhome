{
  "name": "telegram-home-assistant",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:luismeyer/telegram-home-assistant.git",
  "author": "Luis Meyer <luis.meyer@nordakademie.de>",
  "license": "MIT",
  "scripts": {
    "clean": "tsc --build --clean",
    "build": "concurrently -r 'tsc --build' 'lerna run compile'",
    "ts:watch": "tsc --watch",
    "lerna:watch": "lerna run watch",
    "watch": "concurrently -r 'yarn ts:watch' 'yarn lerna:watch'",
    "encrypt": "gpg --symmetric --cipher-algo AES256 .env.production",
    "decrypt": "gpg --decrypt --output secrets/.env .env.production.gpg",
    "start": "sls offline",
    "bootstrap": "lerna bootstrap"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/*",
      "**/*/**"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^15.6.0",
    "concurrently": "^6.2.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.0",
    "serverless-dotenv-plugin": "^3.9.0",
    "serverless-offline": "^7.0.0",
    "typescript": "^4.2.4"
  }
}
